<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MyNewsListActivity">

    <Button
        android:id="@+id/load_news_button"
        android:text="load new news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/clear_news_button"
        android:text="clear news cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/news_text_view"
        android:text="news to be loaded"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>